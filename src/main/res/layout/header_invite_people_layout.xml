<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:background="@color/white"
       android:orientation="horizontal"
       android:layout_height="60dp">
       <LinearLayout
           android:id="@+id/click_layout"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1">
           <TextView
               android:id="@+id/tvTime"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="2018/6/6"
               android:textSize="18sp"
               android:paddingLeft="@dimen/base_p_m_5"
               android:paddingRight="@dimen/base_p_m_5"
               android:textColor="@color/res_text_gray_l"
               android:gravity="center"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:gravity="center"
           android:orientation="vertical"
           android:layout_weight="1">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="充值总金额(元)"
               android:textSize="16sp"
               android:visibility="visible"
               android:textColor="@color/res_text_gray_l"
               android:gravity="center"/>
           <TextView
               android:id="@+id/tvAllMoney"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:text="0"
               android:paddingLeft="@dimen/base_p_m_5"
               android:paddingRight="@dimen/base_p_m_5"
               android:textSize="13sp"
               android:gravity="center"/>
       </LinearLayout>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/res_stroke_deep">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="ID"
            android:gravity="center"
            android:textColor="@color/res_text_gray_l"
            android:textSize="@dimen/base_textsize_15"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="昵称"
            android:gravity="center"
            android:textColor="@color/res_text_gray_l"
            android:textSize="@dimen/base_textsize_15"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="充值金额"
            android:gravity="center"
            android:textColor="@color/res_text_gray_l"
            android:textSize="@dimen/base_textsize_15"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="消费金额"
            android:gravity="center"
            android:textColor="@color/res_text_gray_l"
            android:textSize="@dimen/base_textsize_15"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/res_stroke_deep">
    </View>
</LinearLayout>